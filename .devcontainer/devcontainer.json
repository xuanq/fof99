{
  "image": "mcr.microsoft.com/devcontainers/python:3.10",
  "features": {
    "ghcr.io/va-h/devcontainers-features/uv:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "uv lock && uv sync",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "github.vscode-github-actions",
        "mhutchie.git-graph"
      ],
      "settings": {
        "python.venvPath": "/workspaces/${localWorkspaceFolderBasename}/.venv"
      }
    }
  }
}